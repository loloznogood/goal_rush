{%  extends 'component/layout.html.twig' %}

{% block css %}
    <link rel="stylesheet" type="text/css" href="/css/datatables.min.css"/>
{% endblock %}


{% block main %}

    <main role="main" class="container">

        {% include 'component/fil-ariane.html.twig' with data.filAriane %}

        <h3 class="text-justify titre1">Formulaire de modification des départements des commerciaux</h3>

        {% if data.error is defined %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Erreur:</strong> {{ data.error }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endif %}

        {% if data.success is defined %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Succès:</strong> {{ data.success }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endif %}

        <form class="container" method="POST" action="{{ path_for('admin/commercial.updateDepartement') }}">
            <input type="hidden" name="_METHOD" value="PUT"/>
            <input type="hidden" name="fonction" value="{{ data.fonction }}"/>
            <div class="form-group">
                <label hidden>#Id</label>
                <input type="text" class="form-control" name="id"  value="{{ data.commercial.id }}" readonly hidden>
            </div>
            <div class="form-group">
                <label>Commercial</label>
                <input type="text" class="form-control" name="commercial"  value="{{ data.commercial.prenom }} {{ data.commercial.nom }}" readonly>
            </div>


            <div class="form-group">
                <label>Département(s) du commercial</label>
                <div class="row">
                    <div class="container text-center">
                        {% for d in data.depts %}
                            <div class="form-check form-check-inline col-sm-3">
                                <input class="form-check-input" type="checkbox" name="cbDepts[{{ d.num }}]" value="{{ d.num }}"{% if d.num in data.commercialDepartementsNum %}checked{% endif %}>
                                <label class="form-check-label">{{ d.num }} - {{ d.nom }}</label>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-outline-primary"> <i class="fas fa-check-circle"></i> Valider</button>
            <a class="btn btn-outline-secondary float-right" href="{{ path_for('admin/commercial.departement') }}" role="button"><i class="fas fa-arrow-left"></i> Retour</a>

        </form>
    </main>


{% endblock %}

{% block javascript %}
{% endblock %}
